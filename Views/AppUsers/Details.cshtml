@model CompleteExampleApp.Models.Entities.AppUser
@{
    ViewData["Title"] = "User Details";
}

<h2>User Details</h2>

<div class="card mt-3">
    <div class="card-body">
        <h5 class="card-title">@Model.FirstName @Model.LastName</h5>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Birthdate:</strong> @Model.Birthdate.ToShortDateString()</p>
    </div>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning mt-3">Edit</a>
<a asp-action="Index" class="btn btn-secondary mt-3">Back</a>
