@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CompleteExample</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">CompleteExample</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" asp-controller="AppUsers" asp-action="Index">AppUsers</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Cities" asp-action="Index">Cities</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Events" asp-action="Index">Events</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Locations" asp-action="Index">Locations</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Organizers" asp-action="Index">Organizers</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Tags" asp-action="Index">Tags</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white text-center py-3 mt-5">
        CompleteExample © 2025
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
