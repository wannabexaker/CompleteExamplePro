@model CompleteExampleApp.Models.Entities.Event
@{
    ViewData["Title"] = "Event Details";
}

<h2>Event Details</h2>

<div class="card mt-3">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p><strong>Date:</strong> @Model.DatePlanned?.ToString("yyyy-MM-dd HH:mm")</p>
        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>Max Participants:</strong> @Model.MaxParticipants</p>
        <p><strong>Min Age:</strong> @Model.MinAge</p>
        <p><strong>Location ID:</strong> @Model.LocationId</p>
        <p><strong>Organizer ID:</strong> @Model.OrganizerId</p>
    </div>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning mt-3">Edit</a>
<a asp-action="Index" class="btn btn-secondary mt-3">Back</a>
