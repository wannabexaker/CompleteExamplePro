@model CompleteExampleApp.Models.Entities.Organizer
@{
    ViewData["Title"] = "Edit Organizer";
}

<h2>Edit Organizer</h2>

<form asp-action="Edit" method="post" class="mt-3">
    <input type="hidden" asp-for="UserId" />
    <div class="mb-3">
        <label asp-for="UserId" class="form-label"></label>
        <input asp-for="UserId" type="number" class="form-control" readonly />
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
