@model IEnumerable<CompleteExampleApp.Models.Entities.Location>
@{
    ViewData["Title"] = "Locations";
}

<h2>Locations</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Street</th>
            <th>House Number</th>
            <th>Postal Code</th>
            <th>City</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var l in Model)
        {
            <tr>
                <td>@l.Title</td>
                <td>@l.Street</td>
                <td>@l.HouseNumber</td>
                <td>@l.PostalCode</td>
                <td>@l.CityName</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@l.Id">Edit</a>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@l.Id">Details</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@l.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
