@model CompleteExampleApp.Models.Entities.Location
@{
    ViewData["Title"] = "Delete Location";
}

<h2>Delete Location</h2>

<h5>Are you sure you want to delete this location?</h5>

<div class="mt-3">
    <p><strong>@Model.Title</strong></p>
    <p>@Model.Street @Model.HouseNumber, @Model.CityName</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
