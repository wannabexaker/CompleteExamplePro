@model CompleteExampleApp.Models.Entities.Location
@{
    ViewData["Title"] = "Edit Location";
}

<h2>Edit Location</h2>

<form asp-action="Edit" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Street" class="form-label"></label>
        <input asp-for="Street" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="HouseNumber" class="form-label"></label>
        <input asp-for="HouseNumber" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="PostalCode" class="form-label"></label>
        <input asp-for="PostalCode" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="CityName" class="form-label"></label>
        <input asp-for="CityName" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
